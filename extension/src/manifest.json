{
  "manifest_version": 3,
  "name": "Aletheia - Image Provenance Verifier",
  "version": "1.0.0",
  "description": "Verify Content Credentials (C2PA) in images to detect AI-generated content and verify authenticity",

  "permissions": ["contextMenus", "storage"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/verification-panel.js", "content/content.js"],
    "css": ["content/content.css"],
    "run_at": "document_idle"
  }],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "web_accessible_resources": [{
    "resources": ["wasm/*.wasm", "wasm/*.js"],
    "matches": ["<all_urls>"]
  }],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
